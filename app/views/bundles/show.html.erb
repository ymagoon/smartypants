<div class="container">
  <div class="row banner"></div>
  <div class="row bundle">
    <div class="large-image">
      <%= image_path @bundle.photo %>
    </div>
    <div class="large-description">
      <h1>@bundle.name</h1>
      <div class="icons">
        <p><i class="fas fa-child"></i><%= @bundle.age_group %></p>
        <% if @bundle.gender == "Male" %>
          <p><i class="fas fa-mars"></i><%= @bundle.gender %></p>
        <% else %>
          <p><i class="fas fa-venus"></i><%= @bundle.gender %></p>
        <% end %>
        <p><i class="fas fa-tshirt"></i><%= @bundle.items.length %></p>
        <p><i class="fas fa-dollar-sign"></i><%= @bundle.price_per_night %> per night</p>
      </div>
      <div class="bundle_items">
        <% @bundle.items.each do |item| %>
        <ul>
          <li><%= item.color %> <%= item.name %> (<%= item.category %> - <%= item.condition %>)</li>
        </ul>
        <% end %>
        <% if current_user == @bundle.user %> <!-- WE SHOULD REVIEW THIS AFTER ADDING PUNDIT -->
          <%= link_to "Edit this Bundle", item_path(@bundle), class: "btn" %>
        <% end %>
        <%= if current_user == @bundle.user %>
          <%= link_to bundles_path, method: :delete do %>
          <div class="large-icon">
            <i class="fas fa-trash-alt"></i>
          </div>
          <% end %>
        <% end %>
      </div>
      <div class="booking-form">
        <%= render 'shared/formbooking' %>
      </div>
    </div>
  </div>
</div>
