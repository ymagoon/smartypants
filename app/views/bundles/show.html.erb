<% title @bundle.name %>

<div class="container">
  <div class="bundle-show-content">
    <div class="bundle-show-image">
      <%= cl_image_tag @bundle.photo.url(:showpage), class: "bundle-photo" %>
      <div class="controls">
        <% if @bundle.user == current_user %>
          <p><%= link_to "Edit Bundle", new_bundle_item_path(@bundle), class: 'btn btn-primary brand-primary' %></p>
          <p><%= link_to "Delete Bundle", bundle_path(@bundle), method: :delete, class: 'btn btn-primary brand-primary'  %></p>
        <% end %>
        <p><%= link_to "Back to All", bundles_path, class: "btn btn-primary brand-primary" %>
      </div>
    </div>
    <div class="bundle-show-info">
      <h1><%= @bundle.name %></h1>
      <p>Review stars will go here (23)</p>
      <p><i class="fas fa-dollar-sign"></i>&nbsp<strong><%= @bundle.price_per_day_formatted %> / day</strong></p>
      <hr>
      <div>
        <% @bundle.items.each do |item| %>
        <ul>
          <li>
            <p><%= item.name %> </p>
            <p><strong>Color: </strong><%= item.color %> </p>
            <p><strong>Condition: </strong> <%= item.condition %></p>
          </li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>
