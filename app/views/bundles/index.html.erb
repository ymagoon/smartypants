<% title 'All Bundles' %>
<%= render 'banner' %>
<br>
<div class="container" id="container-js">
  <div class="search-container">
    <div class="search-input">
      <%= form_tag bundles_path, method: :get do %>
        <%= text_field_tag :name, params[:name], class: "form-control" %>
        <%= text_field_tag :age_group, params[:age_group], class: "form-control" %>
    </div>

    <div class="search-button">
        <%= submit_tag 'Find Bundles', class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="search-button">
      <%= link_to 'Clear Search', bundles_path, class: "btn btn-info" %>
    </div>
  </div>
</div>
<br>
<%= render 'list_bundles' %>


<% if @query %>
  <script>
    document.getElementById("container-js").scrollIntoView();
  </script>
<% end %>
