
<%= simple_form_for [bundle, review], remote: true do |f| %>
  <%= f.input :title %>
  <%= f.input :content, as: :text, input_html: {rows: 10, cols: 5}, placeholder: "Add a review"  %>
  <%= f.input :stars, collection: [ 1, 2, 3, 4, 5 ]  %>
  <%= f.submit "Add Review", class: "btn btn-primary" %>
<% end %>


