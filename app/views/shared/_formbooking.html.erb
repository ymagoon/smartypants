<%= simple_form_for [@bundle, @booking] do |f| %>
  <%= f.input :start_date, input_html: { data: { provide: 'datepicker', 'date-format': 'dd/mm/yyyy' } }, as: :string %>
  <%= f.input :end_date, input_html: { data: { provide: 'datepicker', 'date-format': 'dd/mm/yyyy' } }, as: :string %>
  <%= f.input :shipping_address, placeholder: "Put your Full Address Here" %>
  <%= f.input :comment, as: :text, input_html: {rows: 10, cols: 10}, placeholder: "Add a comment for the Bundle-Owner"  %>
  <%= f.submit "Continue", class: "btn btn-primary" %>
<% end %>
